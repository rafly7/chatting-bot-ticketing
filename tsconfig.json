{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "rootDir": "src",
        "outDir": "dist",
        "types": ["node"],
        "strict": true,
        "skipLibCheck": true
    },
    "lib": ["es2015"],
    "include": ["src/**/*"],
    "exclude": ["src/**/*.spec.ts", "src/modules/**"]
}
